{
  "include": ["src", "types", "__tests__"],
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
